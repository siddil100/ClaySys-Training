@model List<MovieTicketBooking.Models.ShowTime>
@{
    ViewBag.Title = "SeeShowtimes";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<h2>SeeShowtimes</h2>

<div class="showtimes-list">
    @if (Model != null && Model.Count > 0)
    {
        <ul>
            @foreach (var showtime in Model)
            {
                <li>
                    <div class="showtime-card">
                        <p><strong>Date:</strong> @showtime.ShowDate.ToShortDateString()</p>
                        <p><strong>Start Time:</strong> @(DateTime.Today.Add(showtime.StartTime).ToString("hh:mm tt"))</p>
                        <p><strong>Screen:</strong> Screen @showtime.ScreenNumber</p>

                        @using (Html.BeginForm("SelectSeats", "User", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.Hidden("showtimeId", showtime.ShowtimeId)
                            <button type="submit" class="btn btn-primary" onclick="return confirm('Are you sure you want to book tickets for this showtime?');">
                                Book Tickets
                            </button>
                        }

                    </div>
                </li>
            }
        </ul>
    }
    else
    {
        <p>No showtimes available for this movie at the moment.</p>
    }
</div>

<!-- Additional CSS for styling showtime cards -->
<style>
    .showtimes-list ul {
        list-style-type: none;
        padding: 0;
    }

    .showtimes-list li {
        margin-bottom: 15px;
    }

    .showtime-card {
        border: 1px solid #ddd;
        padding: 15px;
        border-radius: 8px;
        background-color: #f8f8f8;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .btn {
        background-color: #007bff;
        color: white;
        border: none;
        padding: 10px 20px;
        text-decoration: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn:hover {
            background-color: #0056b3;
        }
</style>
